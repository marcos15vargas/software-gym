---
import Layout from '../layouts/Layout.astro';
import Logo from '../assets/Logo.astro'

---


<Layout>
    <main class="">
        <section class="max-w-3xl mx-auto p-4 border border-amarillo mt-12">
            <div class="flex text-fondo justify-between items-center mb-4 bg-amarillo py-4 px-4">
                <div class="flex items-center w-12">
                    <Logo />
                </div>
                <h1 class="text-3xl font-bold">Agregar Usuario</h1>
                <a href="/dashboard" class="cursor-pointer hover:text-white font-bold">Volver atras</a>
            </div>
            <div class="container mt-8">
                <div class="row">
                    <form >
                        <div class="mb-3 flex flex-col">
                            <label for="exampleFormControlInput1" class="form-label text-2xl mb-1 font-bold text-amarillo">Nombre</label>
                            <input type="text" class="max-w-64 form-control border border-amarillo rounded focus:outline-none" id="name" placeholder="Nombre">
                        </div>
                        <div class="mb-3 flex flex-col">
                            <label for="exampleFormControlTextarea1" class="form-label form-label text-2xl mb-1 font-bold text-amarillo">Apellido</label>
                            <input type="text" class="max-w-64 form-control border border-amarillo rounded focus:outline-none" id="lastName" placeholder="Apellido">
                        </div>
                        <div class="mb-3 flex flex-col">
                            <label for="exampleFormControlInput2" class="form-label form-label text-2xl mb-1 font-bold text-amarillo">Plan Solicitado</label>
                            <label for="plan" class="form-label form-label text-sm mb-1 font-bold text-amarillo">1) Basico <br> 2) Pase Libre</label>
                            <input type="number" class=" max-w-16 form-control border border-amarillo rounded focus:outline-none" id="plan" placeholder="plan" min="1" max="2">
                        </div>
                        <div class="mb-3 flex flex-col">
                            <label for="exampleFormControlInput3" class="form-label form-label text-2xl mb-1 font-bold text-amarillo">Fecha de Vencimiento</label>
                            <input type="date" class="max-w-36 form-control border border-amarillo rounded focus:outline-none" id="payDay" placeholder="Fecha de pago">
                        </div>
                        <div class="mb-3 flex flex-col">
                            <button id="sendForm" type="submit" class="px-4 py-2 bg-amarillo text-fondo font-bold uppercase rounded-md hover:cursor-pointer">Agregar usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <script src="../lib/actions.supabase.js"></script>
</Layout>